{
  "manifest_version": 2,

  "name": "Historify Client",
  "description": "Connects to historify to save browser history",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Historify Client"
  },
  
  "icons": { 
  	"16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png" 
  },

  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "activeTab",
    "webNavigation",
    "storage"
  ]
}