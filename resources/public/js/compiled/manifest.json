{
  "manifest_version": 2,

  "name": "Historify Client",
  "description": "Connects to historify to save browser history",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Historify Client"
  },

  "background": {
    "scripts": ["historify_chrome_client.js"],
    "persistent": false
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "activeTab",
//    "tabs",
    "webNavigation",
//    "https://ajax.googleapis.com/",
//    "http://localhost:8080/",
    "https://*.sveri.de/"
  ]
}
